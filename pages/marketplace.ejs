<!DOCTYPE html>
<html>
  <head>
    <title>Textbook Market</title>
    <style>
      h1   { text-align: center; color:white; }
      h3   { text-align: center; color:white; }
      body { background-color: maroon !important; }
      /* The navbar container */
      .topnav {
          overflow: hidden;
          background-color: black;
      }

      /* Navbar links */
      .topnav a {
          float: left;
          display: block;
          color: #f2f2f2;
          text-align: center;
          padding: 14px 16px;
          text-decoration: none;
      }


      .topnav input[type=text] {
          float: right;
          padding: 6px;
          border: none;
          margin-top: 8px;
          margin-right: 12px;
          font-size: 17px;
      }
      .search{
        float: right;
      }
      th {
        background-color:black;
        color:white;
        text-align: center;
      }

      table, td {
        border: 1px solid black;
      }
      table{ background-color: maroon; color:white; }

    </style>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  </head>

  <body>
          <div class="topnav">
              <a href="/marketplace">Home</a>
              <a href="/postText">Post</a>
              <% if(User.admin) { %>
                <a href="/reports">Reports</a>
              <% } %>
              <a href="/profile">Profile</a>
              <a href="/logout">Logout</a>
            <form id = "searchForm">
              <div class="search">
                <input id = "search-bar" type="text" name="Search" placeholder="Search for Textbook..." action="/marketplace" method="get">
              </div>
            </form> 
          </div>

          <h2 style="color: #ffffff;"> Welcome <%= User.username %> </h2>

          <table style="width:95%" id="textbooktable" align-text="center" align="center">
              <tr>
                  <th>Author</th>
                  <th>Textbook Title</th>
                  <th>ISBN</th>
                  <th>Make</th>
                  <th>Price</th>
              </tr>
              <% for(var i = 0; i < textbooks.length; i++){ %>
              <tr>
                <td><%= textbooks[i].author %></td>
                <td>
                  <form method="get">
                    <a style="color: #ffffff;" href="/textbook?textid=<%= textbooks[i]._id %>"><%= textbooks[i].title %></a>
                </td>
                <td><%= textbooks[i].isbn %></td>
                <td><%= textbooks[i].make %></td>
                <td>$<%= textbooks[i].price %></td>
              </tr>
              <% } %>
 
          </table>

      <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
      <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  </body>
</html>
